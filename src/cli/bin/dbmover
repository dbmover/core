#!/usr/bin/env node

"use strict";

process.title = 'dbmover';

var findup = require('findup-sync');
var resolve = require('resolve').sync;
var path = require('path');
var colors = require('colors');

var basedir = process.cwd();
var path = undefined;

try {
    path = resolve('dbmover', {basedir: basedir});
} catch (ex) {
    path = findup('lib/dbmover.js');
    // No dbMover install found!
    if (!path) {
        console.log('Unable to find local dbmover!'.red);
        process.exit(99);
    }
}

require(path)();

